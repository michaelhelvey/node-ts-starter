{
	"compilerOptions": {
		"types": ["vitest/globals"],
		"target": "ES2020",
		"module": "NodeNext",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src"
	},
	"include": ["src/**/*"]
}
