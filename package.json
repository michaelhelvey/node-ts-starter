{
  "name": "@michaelhelvey/node-ts-starter",
  "description": "opinionated starter template for node.js libraries in typescript",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelhelvey/node-ts-starter"
  },
  "author": {
    "email": "michael.helvey1@gmail.com",
    "name": "Michael Helvey",
    "url": "https://github.com/michaelhelvey"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json",
    "tsconfig.json"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "prepare": "lefthook install",
    "dev": "nodemon -q -I --exec node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm ./src/index.ts",
    "test": "vitest",
    "lint": "oxlint --type-aware --typecheck .",
    "lint:fix": "oxlint --fix --fix-suggestions --fix-dangerously .",
    "fmt": "oxfmt",
    "build": "tsdown"
  },
  "packageManager": "pnpm@10.30.0",
  "devDependencies": {
    "@arethetypeswrong/core": "0.18.2",
    "@swc/core": "1.15.11",
    "@types/node": "25.3.0",
    "@typescript/native-preview": "7.0.0-dev.20260220.1",
    "@vitest/coverage-v8": "4.0.18",
    "eslint-plugin-perfectionist": "5.6.0",
    "eslint-plugin-unused-imports": "4.4.1",
    "lefthook": "2.1.1",
    "nodemon": "3.1.14",
    "oxfmt": "0.34.0",
    "oxlint": "1.49.0",
    "oxlint-tsgolint": "0.14.2",
    "prettier": "3.8.1",
    "ts-node": "10.9.2",
    "tsdown": "0.20.3",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
